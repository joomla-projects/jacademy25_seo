<?xml version="1.0" encoding="UTF-8"?>
<config>
	<help key="Mail_Templates:_Options"/>
	<inlinehelp button="show"/>
	<fieldset
		name="mails_options"
		label="COM_MAILS_CONFIG_MAIL_OPTIONS"
		addfieldprefix="Joomla\Component\Mails\Administrator\Field">

		<field
			name="mail_style"
			type="list"
			label="COM_MAILS_FIELD_MAIL_STYLE_LABEL"
			default="plaintext"
			validate="options"
			>
			<option value="plaintext">COM_MAILS_FIELD_OPTION_PLAINTEXT</option>
			<option value="html">COM_MAILS_FIELD_OPTION_HTML</option>
			<option value="both">COM_MAILS_FIELD_OPTION_BOTH</option>
		</field>

		<field
			name="alternative_mailconfig"
			type="radio"
			label="COM_MAILS_CONFIG_FIELD_ALTERNATIVE_MAILCONFIG_LABEL"
			layout="joomla.form.field.radio.switcher"
			default="0"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="copy_mails"
			type="radio"
			label="COM_MAILS_CONFIG_FIELD_COPY_MAILS_LABEL"
			layout="joomla.form.field.radio.switcher"
			default="0"
			>
			<option value="0">JDISABLED</option>
			<option value="1">JENABLED</option>
		</field>

		<field
			name="attachment_folder"
			type="text"
			label="COM_MAILS_CONFIG_FIELD_ATTACHMENT_FOLDER_LABEL"
			description="COM_MAILS_CONFIG_FIELD_ATTACHMENT_FOLDER_DESC"
			validate="folderPathExists"
			exclude="administrator|api|cache|cli|components|includes|language|layouts|libraries|modules|plugins|templates|tmp"
		/>

		<field
			name="disable_htmllayout"
			type="radio"
			label="COM_CONFIG_FIELD_MAILTEMPLATE_LAYOUT_OFF_LABEL"
			layout="joomla.form.field.radio.switcher"
			default="1"
			showon="mail_style:html[OR]mail_style:both"
			>
			<option value="0">JDISABLED</option>
			<option value="1">JENABLED</option>
		</field>

		<field
			name="mail_htmllayout"
			type="mailtemplateLayout"
			label="COM_CONFIG_FIELD_MAILTEMPLATE_LAYOUT_LABEL"
			class="form-select"
			showon="mail_style:html[OR]mail_style:both[AND]disable_htmllayout:1"
		/>

		<field
			name="mail_logofile"
			type="media"
			label="COM_CONFIG_FIELD_MAILTEMPLATE_LOGOFILE_LABEL"
			schemes="http,https,ftp,ftps,data,file"
			validate="url"
			relative="true"
			default=""
			showon="mail_style:html[OR]mail_style:both[AND]disable_htmllayout:1"
		/>

		<fields name="styles">
			<field
				name="fontFamily"
				type="list"
				label="COM_CONFIG_FIELD_MAILTEMPLATE_FONT_FAMILY"
				default="Arial, sans-serif"
				validate="options"
				showon=".mail_style:html[OR].mail_style:both[AND].disable_htmllayout:1"
			>
				<option value="Arial, sans-serif">COM_CONFIG_FIELD_MAILTEMPLATE_FONT_FAMILY_ARIAL</option>
				<option value="'Times New Roman', serif">COM_CONFIG_FIELD_MAILTEMPLATE_FONT_FAMILY_TIMES</option>
			</field>

			<field
				name="backgroundColor"
				type="color"
				label="COM_CONFIG_FIELD_MAILTEMPLATE_BACKGROUND_COLOR"
				default="#efefef"
				filter="color"
				showon=".mail_style:html[OR].mail_style:both[AND].disable_htmllayout:1"
			/>

			<field
				name="headerBackgroundColor"
				type="color"
				label="COM_CONFIG_FIELD_MAILTEMPLATE_HEADER_BACKGROUND_COLOR"
				default="#ffffff"
				filter="color"
				showon=".mail_style:html[OR].mail_style:both[AND].disable_htmllayout:1"
			/>

			<field
				name="headerTextColor"
				type="color"
				label="COM_CONFIG_FIELD_MAILTEMPLATE_HEADER_TEXT_COLOR"
				default="#112855"
				filter="color"
				showon=".mail_style:html[OR].mail_style:both[AND].disable_htmllayout:1"
			/>

			<field
				name="bodyBackgroundColor"
				type="color"
				label="COM_CONFIG_FIELD_MAILTEMPLATE_BODY_BACKGROUND_COLOR"
				default="#ffffff"
				filter="color"
				showon=".mail_style:html[OR].mail_style:both[AND].disable_htmllayout:1"
			/>

			<field
				name="bodyTextColor"
				type="color"
				label="COM_CONFIG_FIELD_MAILTEMPLATE_BODY_TEXT_COLOR"
				default="#000000"
				filter="color"
				showon=".mail_style:html[OR].mail_style:both[AND].disable_htmllayout:1"
			/>

			<field
				name="bodyLinkColor"
				type="color"
				label="COM_CONFIG_FIELD_MAILTEMPLATE_BODY_LINK_COLOR"
				default="#112855"
				filter="color"
				showon=".mail_style:html[OR].mail_style:both[AND].disable_htmllayout:1"
			/>

			<field
				name="footerBackgroundColor"
				type="color"
				label="COM_CONFIG_FIELD_MAILTEMPLATE_FOOTER_BACKGROUND_COLOR"
				default="#112855"
				filter="color"
				showon=".mail_style:html[OR].mail_style:both[AND].disable_htmllayout:1"
			/>

			<field
				name="footerTextColor"
				type="color"
				label="COM_CONFIG_FIELD_MAILTEMPLATE_FOOTER_TEXT_COLOR"
				default="#ffffff"
				filter="color"
				showon=".mail_style:html[OR].mail_style:both[AND].disable_htmllayout:1"
			/>

			<field
				name="footerLinkColor"
				type="color"
				label="COM_CONFIG_FIELD_MAILTEMPLATE_FOOTER_LINK_COLOR"
				default="#cccccc"
				filter="color"
				showon=".mail_style:html[OR].mail_style:both[AND].disable_htmllayout:1"
			/>
		</fields>
	</fieldset>

	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		>

		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules"
			validate="rules"
			component="com_mails"
			section="component"
		/>
	</fieldset>
</config>
